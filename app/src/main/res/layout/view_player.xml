<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:visibility="visible">

    <SurfaceView
        android:id="@+id/vlc_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/vlc_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/subtitles_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/overlay_control_layout"
            android:layout_marginBottom="10dp"
            tools:text="Subtitles"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowRadius="3.0"
            android:textIsSelectable="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/on_touch_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="+10s"
            tools:visibility="visible"
            android:visibility="invisible"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowRadius="3.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/overlay_control_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vlc_button_play_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause_circle_outline_black_24dp" />

            <LinearLayout
                android:id="@+id/vlc_seek_bar_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/vlc_seekbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/vlc_duration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00 / 00:00"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/vlc_button_mark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bookmark_border_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/vlc_overlay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_horizontal"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            tools:text="Title s01e01" />

    </RelativeLayout>


</FrameLayout>
